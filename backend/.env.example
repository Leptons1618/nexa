# ── Server ──────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ── LLM Provider ───────────────────────────────────────
# Options: "ollama" or "cloud"
LLM_PROVIDER=ollama

# ── Ollama (local) ─────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# ── Cloud LLM (OpenAI-compatible) ─────────────────────
CLOUD_API_KEY=8ced042ae8774a718e6889098eaca262.PuAUqBkFi7QcVBuOt61HAsgO
CLOUD_BASE_URL=https://api.openai.com/v1
CLOUD_MODEL=gpt-4

# ── LLM Common ─────────────────────────────────────────
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.9
LLM_MAX_TOKENS=512

# ── Embeddings ─────────────────────────────────────────
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# ── Vector Store ───────────────────────────────────────
# Options: "faiss" or "qdrant"
VECTOR_STORE=faiss
INDEX_PATH=data/index.faiss
INDEX_METADATA_PATH=data/index_meta.json
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=nexa_support

# ── RAG ────────────────────────────────────────────────
CHUNK_SIZE=400
CHUNK_OVERLAP=80
TOP_K=4
SIMILARITY_THRESHOLD=0.35

# ── Prompts ────────────────────────────────────────────
SYSTEM_PROMPT_PATH=app/config/prompts/system.txt
RAG_PROMPT_PATH=app/config/prompts/rag_addon.txt

# ── Data ───────────────────────────────────────────────
DATA_DIR=data
